void main() {
  
  List <int> numeros = [1,3,2,6,19,16,14,15];
  novaLista(numeros);
}

void novaLista(List<int> numeros){
  
    List <int> numerosPares = [];
    for(int i = numeros.length -1; i >= 0; i--){
      if(numeros[i] % 2 == 0){
        numerosPares.add(numeros[i]);
      }
    }
  numerosPares.sort();
  
  print(numerosPares);
 
  
}
